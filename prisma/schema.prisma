generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  Admin
  User
}

model Category {
  id         String    @id @unique @default(uuid())
  name       String    @unique
  image      String
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  products   Product[]

  @@map("categories")
}

model Product {
  id           String    @id @unique @default(uuid())
  name         String
  quantity     Int
  status       String
  price        String
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
  categoryName String?
  category     Category? @relation(fields: [categoryName], references: [name])

  @@map("products")
}

model User {
  id         String   @id @unique @default(uuid())
  name       String
  lastname   String
  email      String   @unique
  password   String
  role       Role?    @default(User)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("users")
}
